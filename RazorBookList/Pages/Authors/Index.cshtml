@page
@model RazorAuthors.Pages.Authors.IndexModel
@{
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info text-black-50">Authors List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white openmodal" asp-page="/Authors/Create">Add new author</a>
    </div>
    <form asp-action="Index" method="get">
        <p>
            <div class="form-row align-items-end">
                <div class="form-group col">
                    <label class="control-label">First name</label>
                    <input type="text" asp-for="FirstName" class="form-control">
                </div>
                <div class="form-group col">
                    <label class="control-label">Last name</label>
                    <input type="text" asp-for="LastName" class="form-control">
                </div>
                <div class="form-group col">
                    <label class="control-label">City</label>
                    <input type="text" asp-for="City" class="form-control">
                </div>
                <div class="form-group col">
                    <input type="submit" value="Search" class="btn btn-success btn-sm form-control" />
                </div>
            </div>
        </p>
    </form>
    <div class="col-12 border mt-3 p-3">
        <form method="post">
            @if (Model.Authors.Any())
            {
                <table class="table table-striped table-bordered border">
                    <tr class="table-secondary thead-dark">
                        <th>
                            <label asp-for="@Model.Authors.FirstOrDefault().FirstName"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.Authors.FirstOrDefault().LastName"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.Authors.FirstOrDefault().City"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.Authors.FirstOrDefault().Email"></label>
                        </th>
                        <th class="w-25"></th>
                    </tr>
                    @foreach (var item in Model.Authors)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Email)
                            </td>
                            <td style="text-align:center;">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm w-25 openmodal">Edit</a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm w-25 openmodal">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No author available</p>
            }
        </form>
    </div>
</div>


<div id="modDialog" class="modal fade">

</div>