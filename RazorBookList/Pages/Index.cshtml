<div class="card-columns">
    @foreach (var item in Model.Books)
    {
        <a onclick="alert('jljnjn')">
            <div class="card">
                @if (item.Cover != null)
                {
                    <img class="card-img" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Cover))">
                }
                else
                {
                    <img class="card-img" src="~/Images/no_image.png">
                }
                <div class="card-body">
                    <div class="card-title text-center">
                        <h4 class="font-weight-bold">@item.Name</h4>
                        @if (item.Author != null)
                        {
                            <h6>by @item.Author.LastName</h6>
                        }
                    </div>
                </div>
            </div>
        </a>
    }
</div>