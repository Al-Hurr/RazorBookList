@page
@model RazorBookList.Pages.BookList.IndexModel
@{
}

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info text-black-50">Books List</h2>
    </div>
    <div class="col-3">
        <form method="post">
            <a class="btn btn-info form-control text-white" asp-page="/BookList/Create">Create New Book</a>
        </form>
    </div>
    <div class="col-12 border mt-3 p-3">
        <form method="post">
            @if (Model.Books.Any())
            {
                <table class="table table-striped table-bordered border">
                    <tr class="table-secondary thead-dark">
                        <th class="w-25">
                            <label asp-for="@Model.Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th></th>
                    </tr>
                    @foreach(var item in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Author   )
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ISBN   )
                            </td>
                            <td style="text-align:center;">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm w-25">Edit</a>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Do you want to delete the entry?')" class="btn btn-danger btn-sm w-25">Delete</button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No book available</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center;">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">
        <table id="DT" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table> 
    </div>
</div>
@section Scripts{
    <script src="~/js/bookList.js"></script>

}