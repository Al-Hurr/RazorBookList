@page
@model RazorBookList.Pages.Stores.CreateModel
@{
    Layout = null;
}

<div class="modal-dialog  modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-body">

            <div class="row">
                <div class="col-md-12">
                    <form asp-action="OnPost">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Store.Name" class="control-label"></label>
                            <input asp-for="Store.Name" class="form-control" />
                            <span asp-validation-for="Store.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Store.Adress" class="control-label"></label>
                            <input asp-for="Store.Adress" class="form-control" />
                            <span asp-validation-for="Store.Adress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Store.WorkingTimeFrom" for="example-time-input" class="control-label"></label>
                            <div class="form-row">
                                <div class="col-3">
                                    <label for="example-time-input" class="control-label">from</label>
                                    <input class="form-control" type="time" asp-for="Store.WorkingTimeFrom" id="example-time-input">
                                </div>
                                <div class="col-3 ml-3">
                                    <label for="example-time-input" class="control-label">to</label>
                                    <input class="form-control" type="time" asp-for="Store.WorkingTimeTo" id="example-time-input">
                                </div>
                            </div>
                        </div>  
                        <hr />
                        <div class="form-group row">
                            <div class="col-4">
                                <input type="submit" value="Create" class="btn btn-primary form-control sub" />
                            </div>
                            <div class="col-4">
                                <a asp-page="Index"><span class="btn btn-success form-control">Cancel</span></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>