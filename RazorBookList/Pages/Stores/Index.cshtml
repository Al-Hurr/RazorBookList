@page
@model RazorAuthors.Pages.Stores.IndexModel
@{
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info text-black-50">Stores List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white openmodal" asp-page="/Stores/Create">Add new store</a>-
    </div>
    <form asp-action="Index" method="get">
        <p>
            <div class="form-row align-items-end">
                <div class="form-group col">
                    <label class="control-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <div class="form-group col">
                    <label class="control-label">Adress</label>
                    <input type="text" asp-for="Adress" class="form-control">
                </div>
                <div class="form-group col">
                    <label class="control-label">Working time</label>
                    <input type="text" asp-for="WorkingTime" class="form-control">
                </div>
                <div class="form-group col">
                    <input type="submit" value="Search" class="btn btn-success btn-sm form-control" />
                </div>
            </div>
        </p>
    </form>
    <div class="col-12 border mt-3 p-3">
        <form method="post">
            @if (Model.Stores.Any())
            {
                <table class="table table-striped table-bordered border">
                    <tr class="table-secondary thead-dark">
                        <th>
                            @Html.DisplayNameFor(model => model.Stores.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Stores.FirstOrDefault().Adress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Stores.FirstOrDefault().WorkingTime)
                        </th>
                        <th class="w-25"></th>
                    </tr>
                    @foreach (var item in Model.Stores)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Adress)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.WorkingTime)
                            </td>
                            <td style="text-align:center;">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm w-25 openmodal">Edit</a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm w-25 openmodal">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No store available</p>
            }
        </form>
    </div>
</div>


<div id="modDialog" class="modal fade">

</div>